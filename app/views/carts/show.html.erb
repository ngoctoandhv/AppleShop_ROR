<div class="container">
  <div class="">
  <%= link_to 'Keep Shopping', products_path, class: 'btn btn-warning' %>
</div>
<hr />
<section class="section">
  <%= render(@cart.line_items) %>

  <div class="row">
    <div class="col col-xs-10"></div>
    <div class="col col-xs-2 align-center">
      <strong><span class="total">Total:</span> <%= number_to_currency(@cart.total_price) %></strong>
    </div>
  </div>
  <div class="row">
    <div class="col col-xs-10"></div>
    <div class="col col-xs-2 align-center">
      <%= button_to 'EmptyCart', @cart, method: :delete, data: { confirm: "Are
      you sure? " }, class: "btn btn-danger empty " %>
    </div>
  </div>
</section>
</div>

